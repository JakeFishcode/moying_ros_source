        <plugin name="${prefix}mimic_plugin3" filename="libroboticsgroup_gazebo_mimic_joint_plugin.so">
          <joint>${prefix}finger_joint</joint>
          <mimicJoint>${prefix}right_outer_knuckle_joint</mimicJoint>
          <multiplier>1.0</multiplier>
        </plugin>
    </gazebo>
  </xacro:macro>
    
  <xacro:macro name="robotiq_85_mimic_gz" params="prefix">
    <xacro:robotiq_85_mimic_gazebo_1 prefix="${prefix}" fingerprefix="right"/>
    <xacro:robotiq_85_mimic_gazebo_1 prefix="${prefix}" fingerprefix="left"/>
