<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:arg name="sensor_prefix" default=""/>
    
    <gazebo>
        <plugin name="gazebo_ros_controller" filename="libgazebo_ros_control.so">
            <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
            <legacyModeNS>true</legacyModeNS>
        </plugin>

        <gazebo reference="base_link">
            <material>Gazebo/DarkGrey</material>
            <gravity>true</gravity>
        </gazebo>
        <plugin filename="libgazebo_ros_planar_move.so" name="base_controller">
            <commandTopic>mecanum_velocity_controller/cmd_vel</commandTopic>
            <odometryTopic>mecanum_velocity_controller/odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <odometryRate>50.0</odometryRate>
            <robotBaseFrame>base_link</robotBaseFrame>
        </plugin>
        
        <plugin name="imu_controller" filename="libhector_gazebo_ros_imu.so">
            <updateRate>50.0</updateRate>
            <bodyName>imu_link</bodyName>
            <frameId>$(arg sensor_prefix)/imu_link</frameId>
            <topicName>imu/data</topicName>
            <accelDrift>0.0 0.0 0.0</accelDrift>
            <accelGaussianNoise>0.005 0.005 0.005</accelGaussianNoise>
            <rateDrift>0.0 0.0 0.0</rateDrift>
            <rateGaussianNoise>0.00005 0.00005 0.00005</rateGaussianNoise>
            <yawDrift>0.0</yawDrift>
            <yawGaussianNoise>0.005</yawGaussianNoise>
        </plugin>

    </gazebo>
    
